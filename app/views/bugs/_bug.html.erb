<div class="row bugs <% if bug.is_closed %>closed<% else %>open<% end %>">
  <div class="col-xs-8 col-sm-10 col-md-10 col-lg-10">
    <h2><%= bug.title %> - <%= bug.priority %></h2>
    <p><%= bug.description %></p>
  </div>
  <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
    <div class="bugButton">
      <% if !bug.is_closed %>
        <%= link_to "Close This Bug", close_bug_path(bug.id), method: :patch %>
      <% else %>
        <p>CLOSED</p>
      <% end %>
    </div>
  </div>
</div>